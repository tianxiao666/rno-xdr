<form name="editForm" role="form" novalidate (ngSubmit)="save()" #editForm="ngForm">

    <div class="modal-header">
        <h4 class="modal-title" id="myTrackLabel" jhiTranslate="backendApp.track.home.createOrEditLabel">Create or edit a Track</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"
                (click)="clear()">&times;</button>
    </div>
    <div class="modal-body">
        <jhi-alert-error></jhi-alert-error>
        <div class="form-group" [hidden]="!track.id">
            <label for="id" jhiTranslate="global.field.id">ID</label>
            <input type="text" class="form-control" id="id" name="id"
                   [(ngModel)]="track.id" readonly />
        </div>
        <div class="form-group">
            <label class="form-control-label" jhiTranslate="backendApp.track.pdate" for="field_pdate">Pdate</label>
            <div class="input-group">
                <input id="field_pdate" type="text" class="form-control" name="pdate" ngbDatepicker  #pdateDp="ngbDatepicker" [(ngModel)]="track.pdate"
                required/>
                <span class="input-group-btn">
                    <button type="button" class="btn btn-default" (click)="pdateDp.toggle()"><i class="fa fa-calendar"></i></button>
                </span>
            </div>
            <div [hidden]="!(editForm.controls.pdate?.dirty && editForm.controls.pdate?.invalid)">
                <small class="form-text text-danger"
                   [hidden]="!editForm.controls.pdate?.errors?.required" jhiTranslate="entity.validation.required">
                   This field is required.
                </small>
            </div>
        </div>
        <div class="form-group">
            <label class="form-control-label" jhiTranslate="backendApp.track.startTime" for="field_startTime">Start Time</label>
            <input type="number" class="form-control" name="startTime" id="field_startTime"
                [(ngModel)]="track.startTime" required />
            <div [hidden]="!(editForm.controls.startTime?.dirty && editForm.controls.startTime?.invalid)">
                <small class="form-text text-danger"
                   [hidden]="!editForm.controls.startTime?.errors?.required" jhiTranslate="entity.validation.required">
                   This field is required.
                </small>
                <small class="form-text text-danger"
                    [hidden]="!editForm.controls.startTime?.errors?.number" jhiTranslate="entity.validation.number">
                    This field should be a number.
                </small>
            </div>
        </div>
        <div class="form-group">
            <label class="form-control-label" jhiTranslate="backendApp.track.endTime" for="field_endTime">End Time</label>
            <input type="number" class="form-control" name="endTime" id="field_endTime"
                [(ngModel)]="track.endTime" required />
            <div [hidden]="!(editForm.controls.endTime?.dirty && editForm.controls.endTime?.invalid)">
                <small class="form-text text-danger"
                   [hidden]="!editForm.controls.endTime?.errors?.required" jhiTranslate="entity.validation.required">
                   This field is required.
                </small>
                <small class="form-text text-danger"
                    [hidden]="!editForm.controls.endTime?.errors?.number" jhiTranslate="entity.validation.number">
                    This field should be a number.
                </small>
            </div>
        </div>
        <div class="form-group">
            <label class="form-control-label" jhiTranslate="backendApp.track.cell" for="field_cell">Cell</label>
            <input type="number" class="form-control" name="cell" id="field_cell"
                [(ngModel)]="track.cell"  />
        </div>
        <div class="form-group">
            <label class="form-control-label" jhiTranslate="backendApp.track.imei" for="field_imei">Imei</label>
            <input type="number" class="form-control" name="imei" id="field_imei"
                [(ngModel)]="track.imei"  />
        </div>
        <div class="form-group">
            <label class="form-control-label" jhiTranslate="backendApp.track.imsi" for="field_imsi">Imsi</label>
            <input type="number" class="form-control" name="imsi" id="field_imsi"
                [(ngModel)]="track.imsi"  />
        </div>
        <div class="form-group">
            <label class="form-control-label" jhiTranslate="backendApp.track.msisdn" for="field_msisdn">Msisdn</label>
            <input type="number" class="form-control" name="msisdn" id="field_msisdn"
                [(ngModel)]="track.msisdn"  />
        </div>
        <div class="form-group">
            <label class="form-control-label" jhiTranslate="backendApp.track.lon" for="field_lon">Lon</label>
            <input type="number" class="form-control" name="lon" id="field_lon"
                [(ngModel)]="track.lon"  />
        </div>
        <div class="form-group">
            <label class="form-control-label" jhiTranslate="backendApp.track.lat" for="field_lat">Lat</label>
            <input type="number" class="form-control" name="lat" id="field_lat"
                [(ngModel)]="track.lat"  />
        </div>
        <div class="form-group">
            <label class="form-control-label" jhiTranslate="backendApp.track.indicatorType" for="field_indicatorType">Indicator Type</label>
            <input type="text" class="form-control" name="indicatorType" id="field_indicatorType"
                [(ngModel)]="track.indicatorType"  />
        </div>
        <div class="form-group">
            <label class="form-control-label" jhiTranslate="backendApp.track.status" for="field_status">Status</label>
            <input type="number" class="form-control" name="status" id="field_status"
                [(ngModel)]="track.status"  />
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" (click)="clear()">
            <span class="fa fa-ban"></span>&nbsp;<span jhiTranslate="entity.action.cancel">Cancel</span>
        </button>
        <button type="submit" [disabled]="editForm.form.invalid || isSaving" class="btn btn-primary">
            <span class="fa fa-save"></span>&nbsp;<span jhiTranslate="entity.action.save">Save</span>
        </button>
    </div>
</form>
