<ion-header>

  <ion-navbar>
    <ion-title>异常事件原因分析</ion-title>
  </ion-navbar>

</ion-header>


<ion-content class="cards-bg">

  <ion-list>
    <ion-card-header class="ionCardHeader">
      查询条件
    </ion-card-header>
    <ion-item>
      <ion-label style="color:black">范围</ion-label>
      <ion-select [(ngModel)]="cellType" interface="action-sheet">
        <ion-option value="network" selected>全网</ion-option>
        <ion-option value="eci">ECI</ion-option>
        <ion-option value="imsi">IMSI</ion-option>
      </ion-select>
    </ion-item>
    <ion-item *ngIf="cellType!='network'">
      <ion-label>请输入{{cellType.toUpperCase()}}:</ion-label>
      <ion-input [(ngModel)]="cellInput" ></ion-input>
    </ion-item>

    <ion-item>
      <ion-label style="color:black">指标选择</ion-label>
      <ion-select end style="color:black;text-align: right;width: 60%;" [(ngModel)]="indicatorType" >
        <ion-option *ngFor="let op of _indicatorTypes" [value]="op.value">{{op.label}}</ion-option>
      </ion-select>
    </ion-item>

    <ion-item>
      <ion-label style="color:black">开始时间</ion-label>
      <ion-datetime displayFormat="YYYY-MM-DD" [(ngModel)]="date"></ion-datetime>
    </ion-item>
  </ion-list>


  <button ion-button color="secondary" class="button-work" (click)="doSearch()">查询</button>

</ion-content>
